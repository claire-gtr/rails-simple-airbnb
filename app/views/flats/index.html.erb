<h1>MY AVAILABLE FLATS</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <% @flats.each do |flat| %>
        <div class="card">
          <%= link_to flat_path(flat) do %>
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
